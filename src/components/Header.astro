<header class="flex justify-between items-center py-5 w-full xl:w-[1120px] mx-auto px-5">
    <!-- Logo o Título -->
    <div class="text-xl font-bold flex gap-x-5">Mi Portafolio<img src="/favicon.svg" alt="logo"/></div>
    

    <!-- Botón de menú hamburguesa -->
    <button id="menu-toggle" class="block md:hidden">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
    </button>

        <!-- Menú de navegación -->
    <nav id="menu" class="hidden md:flex flex-col md:flex-row gap-x-5 opacity-90 absolute md:static top-16 left-0 w-full bg-[#000000] md:bg-transparent md:w-auto shadow-md md:shadow-none p-5 md:p-0 text-white">
        <a href="/" class="block py-2 px-4 md:inline hover:bg-[#292929] rounded">Inicio</a>
        <a href="#experiencia" class="block py-2 px-4 md:inline hover:bg-[#292929] rounded">Experiencia</a>
        <a href="#proyectos" class="block py-2 px-4 md:inline hover:bg-[#292929] rounded">Proyectos</a>
        <a href="#sobre-mi" class="block py-2 px-4 md:inline hover:bg-[#292929] rounded">Sobre mí</a>
        <a href="#contacto" class="block py-2 px-4 md:inline hover:bg-[#292929] rounded">Contacto</a>
    </nav>

</header>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const menuToggle = document.getElementById("menu-toggle");
        const menu = document.getElementById("menu");

        if (menuToggle && menu) {  
            menuToggle.addEventListener("click", () => {
                menu.classList.toggle("hidden");
            });
        } else {
            console.error("Elementos del menú no encontrados");
        }
    });
</script>